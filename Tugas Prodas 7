/* Tugas membuat tampilan segitiga angka */

#include <iostream>
#include <math.h>

using namespace std;

int main()
{
    int jumlahsuku;
    string pager = "===========================================================";

    cout << endl << endl << pager << endl;
    cout << pager << endl;
    cout << "Membuat Tampilan segitiga angka " << endl;
    cout << endl;
    int angka;

    cout << "Masukkan angka : "; cin >> angka;

    for (int i=1; i<=angka;i++){
        for(int l=1; l<=i; l++){
            cout<<l;
        }
        cout<<endl;
    }
    for (int i=angka-1; i>=1; i--){
        for (int j=1; j<=i; j++){
            cout<<j;
        }
        cout<<endl;
    }

    return 0;

}
